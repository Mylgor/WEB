@using Lab3.Models

@{
    ViewBag.Title = "Index";
    Layout = null;
    
}



<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" type="text/css" href="../Content/DialogPageStyle.css" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/knockout-3.4.0.js"></script>
    <title>Диалог</title>
</head>
<body>
   
    
    <div class="page-align">
        <div class="head">
            @if (Model != null)
            {
                <h2 id="userName">@Model.Login</h2>
            }
            else
            {
                <h2 id="userName">User</h2>
            }
            
            @Html.ActionLink("Exit", "Logout", "Auth", null, new { @class = "exit-link" })
        </div>
        <div class="block1">
            <div class="dialog-field" id="messagesBox"></div>
            <input type="text" id="messageBox" class="input-field"/>
            <input type="button" value="Отправить" id="send" onclick="sendClick()" class="button"/>
        </div>
        <div class="block2 clear">
            <span>Пользователи</span>
                <div class="listboxOnline" data-bind="foreach: clients.users">
                    <p data-bind="text: Login"></p>
                </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/online")
    <script src="~/Scripts/MyDialog.js"></script>
</body>

